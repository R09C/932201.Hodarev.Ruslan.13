@model WebAppForms.Models.JobInfo

<h2>Шаг 2: Информация о работе</h2>

<form method="post">
    <div>
        <label for="JobTitle">Должность:</label>
        <input type="text" id="JobTitle" name="JobTitle" value="@Model.JobTitle" />
        <span style="color:red;">@Html.ValidationMessageFor(m => m.JobTitle)</span>
    </div>

    <div>
        <label for="Education">Образование:</label>
        <input type="text" id="Education" name="Education" value="@Model.Education" />
        <span style="color:red;">@Html.ValidationMessageFor(m => m.Education)</span>
    </div>

    <button type="submit">Далее</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
